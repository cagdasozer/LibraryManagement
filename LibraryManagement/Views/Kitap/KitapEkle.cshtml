@model LibraryManagement.Models.Kitap

<h2>Kitap Ekle</h2>

<form asp-action="KitapEkle" method="post">
    <div class="form-group">
        <label for="ISBN">ISBN:</label>
        <input type="text" class="form-control" id="ISBN" name="ISBN" required>
    </div>


    <h3>Gelen Kişi Bilgileri</h3>
    <div class="form-group">
        <label for="Ad">Ad:</label>
        <input type="text" class="form-control" id="Ad" name="oduncAlan.Ad" required>
    </div>

    <div class="form-group">
        <label for="Soyad">Soyad:</label>
        <input type="text" class="form-control" id="Soyad" name="oduncAlan.Soyad" required>
    </div>

    <div class="form-group">
        <label for="TCKimlikNo">TC Kimlik No:</label>
        <input type="text" class="form-control" id="TCKimlikNo" name="oduncAlan.TCKimlikNo" required>
    </div>


    <button type="submit" class="btn btn-primary">Ekle</button>
</form>